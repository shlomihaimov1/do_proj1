pipeline {
    agent any

    environment {
        registry = "shlomihaimov1/proj1-front"
        registryCredential = 'dockerhub'
        dockerImage = ''
    }

    stages {
        stage('Init') {
            steps {
                echo 'Initializing..'
                echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
            }
        }
        stage('Checkout') {
            steps {
                echo 'Cloning Git..'
                git 'https://github.com/shlomihaimov1/do_proj1.git'
            }
        }
        // stage('Test') {
        //     steps {
        //         echo 'Testing..'
        //         echo 'Running pytest..'
        //     }
        // }
        stage('Build') {
            steps {
                echo 'Building..'
                script {
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
        stage('Publish') {
            steps {
                echo 'Publishing..'
                docker.withRegistry( '', registryCredential ) {
                    dockerImage.push()
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying..'
                
            }
        }
        stage('Cleanup') {
            steps {
                echo 'Cleaning..'
                sh "docker rmi $registry:$BUILD_NUMBER"
            }
        }
    }
}